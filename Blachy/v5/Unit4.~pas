unit Unit4;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, jpeg, ExtCtrls, StdCtrls;

type
  TForm4 = class(TForm)
    Image1: TImage;
    Edit1: TEdit;
    Memo1: TMemo;
    Button1: TButton;
    Label1: TLabel;
    Label2: TLabel;
    Edit2: TEdit;
    Edit3: TEdit;
    Button2: TButton;
    Button3: TButton;
    Button5: TButton;
    Label3: TLabel;
    procedure FormCreate(Sender: TObject);
    procedure Button1Click(Sender: TObject);
    procedure Edit1KeyPress(Sender: TObject; var Key: Char);
    procedure Button2Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure Button5Click(Sender: TObject);
    procedure Label3Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form4: TForm4;
  i:integer;
  znalazlem:boolean;
  temp:string;

implementation

{$R *.dfm}



procedure TForm4.FormCreate(Sender: TObject);
begin
znalazlem:=false;
EnableScrollBar(Form4.Handle, SB_BOTH, ESB_DISABLE_BOTH);
Memo1.Lines.LoadFromFile('Niemcy.txt');
end;

procedure TForm4.Button1Click(Sender: TObject);
begin
for i:=1 to memo1.lines.count  do
  begin
  if memo1.Lines[i]=edit1.text then
  begin
  edit2.Text:=memo1.lines[i+1];
  edit3.Text:=memo1.lines[i+2];
  znalazlem:=true;
  end;

  end;
if znalazlem=false then showmessage('Nie znalazlem');
znalazlem:=false;
end;

procedure TForm4.Edit1KeyPress(Sender: TObject; var Key: Char);
begin
if Key = #13 then
begin
for i:=1 to memo1.lines.count  do
  begin
  if memo1.Lines[i]=edit1.text then
  begin
  edit2.Text:=memo1.lines[i+1];
  edit3.Text:=memo1.lines[i+2];
  znalazlem:=true;
  end;

  end;
if znalazlem=false then showmessage('Nie znalazlem');
znalazlem:=false;
end;
end;

procedure TForm4.Button2Click(Sender: TObject);
begin
temp:=edit1.Text;
edit1.Text:=temp+'ä';
end;

procedure TForm4.Button3Click(Sender: TObject);
begin
temp:=edit1.Text;
edit1.Text:=temp+'ö';
end;

procedure TForm4.Button5Click(Sender: TObject);
begin
temp:=edit1.Text;
edit1.Text:=temp+'ü';
end;

procedure TForm4.Label3Click(Sender: TObject);
begin
form4.Width:=730;
end;

end.
